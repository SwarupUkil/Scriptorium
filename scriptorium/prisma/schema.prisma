generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id          Int     @id @default(autoincrement())
  username    String  @unique
  password    String
  type        String  @default("USER")
  firstName   String
  lastName    String
  email       String  @unique
  pfpURL      String?
  phoneNumber String?
  theme       String  @default("LIGHT")

  templates Template[]
  posts     Post[]
  ratings   Rating[]
  reports   Report[]
}

model Template {
  id          Int     @id @default(autoincrement())
  uid         Int
  code        String
  language    String
  title       String
  explanation String?
  tags        String?
  privacy     String  @default("PRIVATE")
  forkedFrom  Int?
  deleted     Boolean @default(false)
  blogs       Blog[]

  user User @relation(fields: [uid], references: [id], onDelete: Cascade)

  forkedTemplates Template?  @relation("TemplateForks", fields: [forkedFrom], references: [id])
  forks           Template[] @relation("TemplateForks")
}

model Post {
  id      Int       @id @default(autoincrement())
  rating  Int       @default(0)
  uid     Int?
  replies Comment[] @relation("PostReplies")
  content String
  flagged Boolean   @default(false)
  deleted Boolean   @default(false)
  type    String

  user User? @relation(fields: [uid], references: [id], onDelete: SetNull)

  blog    Blog?
  comment Comment?
  reports Report[]
  ratings Rating[]
}

model Blog {
  postId Int    @id
  title  String
  tags   String

  post Post @relation(fields: [postId], references: [id])

  templates Template[]
}

model Comment {
  postId   Int  @id
  parentId Int
  parent   Post @relation("PostReplies", fields: [parentId], references: [id])
  post     Post @relation(fields: [postId], references: [id])
}

model Rating {
  id     Int @id @default(autoincrement())
  uid    Int
  postId Int
  value  Int @default(0)

  user User @relation(fields: [uid], references: [id])
  post Post @relation(fields: [postId], references: [id])

  @@unique([uid, postId])
}

model Report {
  id          Int      @id @default(autoincrement())
  postId      Int
  uid         Int
  explanation String
  createdAt   DateTime @default(now())
  status      String   @default("OPEN") // can be "OPEN" or "RESOLVED"

  post Post @relation(fields: [postId], references: [id])
  user User @relation(fields: [uid], references: [id])
}
